class Exercise:
    def __init__(self, name, sets, reps):
        self.name = name
        self.sets = sets
        self.reps = reps

    def __str__(self):
        return f"{self.name}: {self.sets} sets of {self.reps} reps"


class TrainingPlan:
    def __init__(self):
        self.exercises = []

    def add_exercise(self, exercise):
        self.exercises.append(exercise)

    def display_plan(self):
        print("Your Training Plan:")
        for exercise in self.exercises:
            print(exercise)


def main():
    plan = TrainingPlan()

    while True:
        print("\nChoose an option:")
        print("1. Add Exercise")
        print("2. View Training Plan")
        print("3. Exit")
        choice = input("Enter your choice: ")

        if choice == "1":
            name = input("Enter exercise name: ")
            sets = int(input("Enter number of sets: "))
            reps = int(input("Enter number of reps per set: "))
            exercise = Exercise(name, sets, reps)
            plan.add_exercise(exercise)
            print("Exercise added to your plan!")
        elif choice == "2":
            plan.display_plan()
        elif choice == "3":
            print("Exiting program...")
            break
        else:
            print("Invalid choice! Please try again.")


if __name__ == "__main__":
    main()
